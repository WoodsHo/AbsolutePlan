<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <EditText
        android:id="@+id/title_plantaskdetails"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@null"
        android:gravity="center_vertical"
        android:hint="标题"
        android:lines="1"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black_30"
        android:textCursorDrawable="@drawable/color_cursor"
        android:textSize="@dimen/text_size_17" />

    <View
        android:id="@+id/divide_plantaskdetails_2"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/title_plantaskdetails"
        android:layout_marginBottom="2dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="2dp"
        android:background="@color/black_10" />

    <ScrollView
        android:id="@+id/scrollview_plantaskdetails"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/divide_plantaskdetails_2">

        <com.woodsho.absoluteplan.widget.AbsPlanEditText
            android:id="@+id/describe_plantaskdetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@null"
            android:gravity="top"
            android:hint="具体描述一下..."
            android:inputType="textMultiLine"
            android:lineSpacingMultiplier="1.5"
            android:minHeight="100dp"
            android:paddingBottom="20dp"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black_30"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="@dimen/text_size_15" />
    </ScrollView>

</RelativeLayout>
